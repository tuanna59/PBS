<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ic_trans"
        android:layout_width="32dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_notification_24" />

    <TextView
        android:id="@+id/type_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ic_trans"
        android:paddingLeft="10dp"
        tools:text="Deposit (+)"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txtTransDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="16dp"
        tools:text="12:12 04/21/2018" />

    <TextView
        android:id="@+id/amount_trans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type_trans"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ic_trans"
        android:paddingLeft="10dp"
        android:textColor="@color/cardview_dark_background"
        android:textSize="14dp"
        tools:text="20.000 VND" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="50dp"
            app:expandedTitleMarginStart="16dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="@drawable/parking_lot_image"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorAccent"
                android:text="Description"
                android:textSize="20sp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/txtCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_marginBottom="2dp"
                tools:text="Capacity: 100 slots" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                tools:text="Price: 15.000 VND/hour" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorAccent"
                android:text="Location"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/place_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                tools:text="3 Quang Trung, Da Nang" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorAccent"
                android:text="Visual View"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/b1"
                        android:text="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_item_resting"
                        android:textColor="@color/bg_light"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/b2"
                        android:text="2"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_item_resting"
                        android:textColor="@color/bg_light"
                        android:layout_toRightOf="@+id/b1"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/b3"
                        android:text="3"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_item_resting"
                        android:textColor="@color/bg_light"
                        android:layout_toRightOf="@+id/b2"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/b4"
                        android:text="4"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_item_resting"
                        android:textColor="@color/bg_light"
                        android:layout_toRightOf="@+id/b3"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/b5"
                        android:text="5"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_item_resting"
                        android:textColor="@color/bg_light"
                        android:layout_toRightOf="@+id/b4"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/b6"
                        android:text="6"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_0"
                        android:textColor="@color/bg_light"
                        android:layout_toRightOf="@+id/b5"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/b7"
                        android:text="7"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_item_resting"
                        android:textColor="@color/bg_light"
                        android:layout_toRightOf="@+id/b6"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/b8"
                        android:text="8"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_item_resting"
                        android:textColor="@color/bg_light"
                        android:layout_below="@+id/b1"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/b9"
                        android:text="9"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_item_resting"
                        android:textColor="@color/bg_light"
                        android:layout_below="@+id/b1"
                        android:layout_toRightOf="@+id/b8"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/b10"
                        android:text="10"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_item_resting"
                        android:textColor="@color/bg_light"
                        android:layout_below="@+id/b1"
                        android:layout_toRightOf="@+id/b9"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/b11"
                        android:text="11"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_0"
                        android:textColor="@color/bg_light"
                        android:layout_below="@+id/b1"
                        android:layout_toRightOf="@+id/b3"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/b12"
                        android:text="12"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_item_resting"
                        android:textColor="@color/bg_light"
                        android:layout_below="@+id/b1"
                        android:layout_toRightOf="@+id/b4"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/b13"
                        android:text="13"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_0"
                        android:textColor="@color/bg_light"
                        android:layout_below="@+id/b1"
                        android:layout_toRightOf="@+id/b5"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/b14"
                        android:text="14"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_item_resting"
                        android:textColor="@color/bg_light"
                        android:layout_below="@+id/b1"
                        android:layout_toRightOf="@+id/b6"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/b15"
                        android:text="15"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_item_resting"
                        android:textColor="@color/bg_light"
                        android:layout_below="@+id/b8"
                        android:layout_toRightOf="@+id/b1"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/b16"
                        android:text="16"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_item_resting"
                        android:textColor="@color/bg_light"
                        android:layout_below="@+id/b9"
                        android:layout_toRightOf="@+id/b2"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <Button
                        android:id="@+id/b17"
                        android:text="17"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomtab_item_resting"
                        android:textColor="@color/bg_light"
                        android:layout_below="@+id/b9"
                        android:layout_toRightOf="@+id/b3"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bottomtab_2"
                android:text="Time Usage"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/time_usables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                tools:text="You have ..." />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/bottomtab_1">
        <TextView
            android:id="@+id/time_usable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textColor="@color/bg_light"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="bottom"
            tools:text="3 Quang Trung, Da Nang" />
        <Button
            android:id="@+id/btnBook"
            android:text="Book Now!"
            android:background="@color/colorAccent"
            android:textColor="@color/bg_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
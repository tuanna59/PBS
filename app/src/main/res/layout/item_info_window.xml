<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_parking"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/txtCarLicense"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_parking"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryNight"
            tools:text="Parking Lot 01" />

        <TextView
            android:id="@+id/available_slots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/txtCarLicense"
            android:gravity="right"
            android:layout_marginTop="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/bottomtab_0"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="20" />

        <TextView
            android:id="@+id/txtType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCarLicense"
            android:layout_toRightOf="@+id/img_parking"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/bottomtab_3"
            android:textSize="14sp"
            tools:text="83 Tran Cao Van, Thanh Khe, Danang" />

        <TextView
            android:id="@+id/parking_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtType"
            android:layout_toRightOf="@+id/img_parking"
            android:layout_marginLeft="10dp"
            android:textColor="@color/bottomtab_2"
            android:textSize="14sp"
            tools:text="10.000 VND / hour" />

        <TextView
            android:id="@+id/txtNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parking_price"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_parking"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12sp"
            tools:text="Click to get detail and booking" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_parking"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/app_logo" />

    <TextView
        android:id="@+id/parking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/img_parking"
        tools:text="43A-215421"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/available_slots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="120dp"
        android:layout_toRightOf="@+id/parking_name"
        tools:text="20"
        android:textColor="@color/bottomtab_0"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/parking_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parking_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_parking"
        android:textColor="@color/cardview_dark_background"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="83 Tran Cao Van, Thanh Khe, Danang"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="14dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardElevation="8dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ic_trans"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ticket" />

        <TextView
            android:id="@+id/txtCarLicense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ic_trans"
            tools:text="43A-215421"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/available_slots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtCarLicense"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:paddingRight="5dp"
            android:gravity="right"
            android:textColor="@color/bottomtab_0"
            android:textSize="14dp"
            tools:text="13:00 03/12/2013" />

        <TextView
            android:id="@+id/txtType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCarLicense"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/ic_trans"
            android:textColor="@color/cardview_dark_background"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="83 Tran Cao Van, Thanh Khe, Danang"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txtCheckinTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtType"
            android:layout_toRightOf="@+id/ic_trans"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/cardview_dark_background"
            tools:text="In: 2018-04-08 12:55:52"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txtCheckoutTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCheckinTime"
            android:layout_toRightOf="@+id/ic_trans"
            android:layout_marginLeft="10dp"
            android:textColor="@color/cardview_dark_background"
            tools:text="Out: 2018-04-08 12:55:52"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_trans"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:textStyle="bold"
            tools:text="Pending"
            android:textSize="14dp" />

        <Button
            android:id="@+id/action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:padding="0dp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/warning"
            android:minHeight="25dp"
            android:minWidth="70dp"
            android:text="Cancel" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="6dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_trans"
            android:layout_width="70dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/parking_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ic_trans"
            tools:text="43A-215421"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/available_slots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/parking_name"
            tools:text="13:00 03/12/2013"
            android:textColor="@color/bottomtab_0"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/parking_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parking_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ic_trans"
            android:textColor="@color/cardview_dark_background"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="83 Tran Cao Van, Thanh Khe, Danang"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/amount_trans2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parking_address"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ic_trans"
            android:textColor="@color/cardview_dark_background"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="20.000 VND"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14dp" />

        <Button
            android:id="@+id/action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/amount_trans2"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="?attr/colorPrimary"
            android:text="Action" />

    </RelativeLayout>
</android.support.v7.widget.CardView>